<h4><%= @status %></h4>

<table>
  <tr>
    <th>ID</th>
	<th>Title</th>
    <th>First name</th>
    <th>Surname</th>
    <th>Phone</th>
    <th>Postcode</th>    
	<th>Order</th>
	<th>Status</th>
	<th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
	<td><%= contact.id %></td>
    <td><%= contact.Title %></td>
    <td><%= contact.Firstname %></td>
    <td><%= contact.Surname %></td>
    <td><%= contact.PhoneNumber %></td>
    <td><%= contact.Postcode %></td>
    <td><%= contact.order.company %></td>
	<td><%= contact.lead_status.name %></td>
	<td><%= link_to 'Edit', edit_contact_path(contact) %>
  </tr>
<% end %>
</table>

<br />


<p><%= link_to 'Download csv', contacts_path + '/getcsvfororder?id=' + params[:order_id]  %></p>
