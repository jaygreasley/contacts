<h4>Lead list</h4>

<table>
  <tr>
	<th>ID</th>
    <th>Title</th>
    <th>First name</th>
    <th>Surname</th>
    <th>Phone</th>
    <th>Postcode</th>    
	<th>Order</th>
	<th>Status</th>
	<th>Created</th>
	<th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.id %></td>
    <td><%= contact.Title %></td>
    <td><%= contact.Firstname %></td>
    <td><%= contact.Surname %></td>
    <td><%= contact.PhoneNumber %></td>
    <td><%= contact.Postcode %></td>
    <td><%= contact.order.Invoice_number %></td>
	<td><%= contact.lead_status.name %></td>
	<td><%= contact.created_at %></td>
	<td><%= link_to 'Edit', edit_contact_path(contact) %>

  </tr>
<% end %>
</table>

<br />

<% if params[:id].to_i  >0 %>

	<p><%= link_to 'Download csv', contacts_path + '/getcsv?id=' + params[:id]  %></p>
<% else %>
	<p><%= link_to 'Download csv', contacts_path + '/getcsv'  %></p>


<% end %>
<% if can? :create, Contact %>
  <%= link_to 'New lead', new_contact_path %>
<% end %>


