<h4>Todays Leads</h4>

<table>
  <tr>
	<th>ID</th>
    <th>Title</th>
    <th>First name</th>
    <th>Surname</th>
    <th>Phone</th>
    <th>Postcode</th>    
	<th>Order</th>
	<th>Status</th>
	<th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.id %></td>
    <td><%= contact.Title %></td>
    <td><%= contact.Firstname %></td>
    <td><%= contact.Surname %></td>
    <td><%= contact.PhoneNumber %></td>
    <td><%= contact.Postcode %></td>
    <td><%= contact.order.id %></td>
	<td><%= contact.lead_status.name %></td>
    <% if can? :manage, Contact %>
	    <td><%= link_to 'Edit', edit_contact_path(contact) %>
    <% end %>
  </tr>
<% end %>
</table>

<br />


<% if can? :create, Contact %>
  <%= link_to 'New lead', new_contact_path %>
<% end %>


